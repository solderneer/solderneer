---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Get all essays
const essays = await getCollection("essays");
const sortedEssays = essays.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get unique tags
const allTags = [...new Set(sortedEssays.flatMap(essay => essay.data.tags))];

// Format date for display
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
}
---

<BaseLayout title="Essays" description="Long-form writing on technology, design, and craft">
  <div class="essays-archive">
    <header class="archive-header">
      <a href="/" class="back-link">‚Üê solderneer</a>
      <h1>Essays</h1>
      <p class="subtitle">Long-form writing on technology, design, and the craft of building.</p>
    </header>

    <!-- Tags filter -->
    <div class="tags-filter">
      <button class="tag-btn active" data-tag="all">all</button>
      {allTags.map((tag) => (
        <button class="tag-btn" data-tag={tag}>{tag}</button>
      ))}
    </div>

    <!-- Filter status -->
    <div class="filter-status" id="filter-status">
      Showing {sortedEssays.length} essays
    </div>

    <!-- Essays list -->
    <div class="essays-list" id="essays-list">
      {sortedEssays.map((essay, index) => (
        <article
          class="essay-item"
          data-tags={essay.data.tags.join(',')}
        >
          <a href={`/essays/${essay.slug}/`}>
            <div class="essay-content">
              <h2 class="essay-title">{essay.data.title}</h2>
              {essay.data.description && (
                <p class="essay-excerpt">{essay.data.description}</p>
              )}
              <div class="essay-meta">
                <span class="essay-date">{formatDate(essay.data.pubDate)}</span>
                {essay.data.tags.map((tag: string) => (
                  <span class="essay-tag">{tag}</span>
                ))}
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

    {sortedEssays.length === 0 && (
      <div class="empty-state">
        <p>No essays yet. Check back soon.</p>
      </div>
    )}
  </div>
</BaseLayout>

<script>
  const essayItems = document.querySelectorAll('.essay-item');
  const filterStatus = document.getElementById('filter-status');
  const tagButtons = document.querySelectorAll('.tag-btn');

  let currentTag = 'all';

  // Tag filtering
  tagButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      tagButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentTag = btn.getAttribute('data-tag') || 'all';
      filterEssays();
    });
  });

  function filterEssays() {
    let visibleCount = 0;

    essayItems.forEach(item => {
      const tags = item.getAttribute('data-tags') || '';
      const matchesTag = currentTag === 'all' || tags.includes(currentTag);

      if (matchesTag) {
        (item as HTMLElement).style.display = '';
        visibleCount++;
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });

    if (filterStatus) {
      filterStatus.textContent = `Showing ${visibleCount} essays`;
    }
  }
</script>


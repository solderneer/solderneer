    border-top: 1px solid var(--border);
  }

  .essay-item {
    border-bottom: 1px solid var(--border);
  }

  .essay-item a {
    display: block;
    padding: 24px 0;
    text-decoration: none;
    transition: background 0.15s;
  }

  .essay-item a:hover {
    background: var(--bg-code);
    margin: 0 -16px;
    padding: 24px 16px;
  }

  .essay-title {
    font-family: 'IBM Plex Serif', Georgia, serif;
    font-size: 1.3rem;
    font-weight: 500;
    color: var(--text);
    margin-bottom: 8px;
    line-height: 1.3;
    transition: color 0.15s;
  }

  .essay-item a:hover .essay-title {
    color: var(--accent);
  }

  .essay-excerpt {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .essay-meta {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .essay-tag {
    color: var(--accent);
  }

  .empty-state {
    padding: 48px 0;
    text-align: center;
    color: var(--text-secondary);
  }
</style>

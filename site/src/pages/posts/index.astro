---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

import PostItemMinimal from "../../components/PostItemMinimal.astro";

const title = "Posts";
const description =
  "Writing on health, technology, culture, philosophy, and economics: arranged in reverse chronological order.";

const posts = (await getCollection("posts")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title={title} description={description}>
  <h1 class="text-6xl lg:text-8xl p-5 px-0 rounded-md w-fit mb-3">📝</h1>
  <h1 class="text-5xl lg:text-6xl font-bold text-neutral-700">{title}</h1>
  <h2 class="text-md lg:text-lg font-bold text-neutral-500 mt-4 mb-10">
    {description}
  </h2>
  <ul class="flex flex-col gap-4">
    {
      posts.map((post) => (
        <li>
          <PostItemMinimal slug={post.slug} post={post} />
        </li>
      ))
    }
  </ul>
</BaseLayout>

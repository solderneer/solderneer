---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import tagsJson from "../../content/_tags.json";

// Get all notes
const notes = await getCollection("notes");
const sortedNotes = notes.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Render notes to get word count and reading time from remark plugins
const notesWithMeta = await Promise.all(
  sortedNotes.map(async (note) => {
    const { remarkPluginFrontmatter } = await note.render();
    return {
      ...note,
      wordCount: remarkPluginFrontmatter.wordCount,
      minutesRead: remarkPluginFrontmatter.minutesRead,
    };
  })
);

// Group notes by year
const notesByYear = notesWithMeta.reduce((acc, note) => {
  const year = note.data.pubDate.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(note);
  return acc;
}, {} as Record<number, typeof notesWithMeta>);

const years = Object.keys(notesByYear).map(Number).sort((a, b) => b - a);

// Get unique tags
const allTags = [...new Set(notesWithMeta.flatMap(note => note.data.tags))];

// Format date for display
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric'
  });
}
---

<BaseLayout title="Notes" description="Research notes and technical documentation">
  <div class="notes-archive">
    <header class="archive-header">
      <a href="/" class="back-link">‚Üê solderneer</a>
      <h1>Notes</h1>
      <p class="subtitle">Research notes, technical documentation, and working thoughts.</p>
    </header>

    <!-- Search -->
    <div class="search-container">
      <div class="search-input-wrapper">
        <span class="search-icon">/</span>
        <input
          type="text"
          id="search-input"
          placeholder="Search notes..."
          autocomplete="off"
        />
        <span class="search-hint">Press / to focus</span>
      </div>
    </div>

    <!-- Tags filter -->
    <div class="tags-filter">
      <button class="tag-btn active" data-tag="all">all</button>
      {allTags.map((tag) => (
        <button class="tag-btn" data-tag={tag}>{tag}</button>
      ))}
    </div>

    <!-- Filter status -->
    <div class="filter-status" id="filter-status">
      Showing {sortedNotes.length} notes
    </div>

    <!-- Notes timeline -->
    <div class="notes-timeline" id="notes-list">
      {years.map((year) => (
        <div class="year-group" data-year={year}>
          <h2 class="year-label">{year}</h2>
          <ul class="notes-list">
            {notesByYear[year].map((note, index) => (
              <li
                class="note-item"
                data-title={note.data.title.toLowerCase()}
                data-tags={note.data.tags.join(',')}
              >
                <a href={`/notes/${note.slug}/`}>
                  <div class="note-date">{formatDate(note.data.pubDate)}</div>
                  <div class="note-content">
                    <span class="note-title">{note.data.title}</span>
                    <div class="note-tags">
                      {note.data.tags.map((tag: string) => (
                        <span class="note-tag">{tag}</span>
                      ))}
                    </div>
                    <div class="note-details">
                      {note.wordCount && (
                        <span class="note-words">{note.wordCount} words</span>
                      )}
                      {note.minutesRead && (
                        <span class="note-reading">{note.minutesRead}</span>
                      )}
                    </div>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>

<script>
  // Search functionality
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const noteItems = document.querySelectorAll('.note-item');
  const yearGroups = document.querySelectorAll('.year-group');
  const filterStatus = document.getElementById('filter-status');
  const tagButtons = document.querySelectorAll('.tag-btn');

  let currentTag = 'all';
  let currentSearch = '';

  // Focus search on / key
  document.addEventListener('keydown', (e) => {
    if (e.key === '/' && document.activeElement !== searchInput) {
      e.preventDefault();
      searchInput.focus();
    }
    if (e.key === 'Escape') {
      searchInput.value = '';
      currentSearch = '';
      filterNotes();
      searchInput.blur();
    }
  });

  // Search on input
  searchInput.addEventListener('input', (e) => {
    currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
    filterNotes();
  });

  // Tag filtering
  tagButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      tagButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentTag = btn.getAttribute('data-tag') || 'all';
      filterNotes();
    });
  });

  function filterNotes() {
    let visibleCount = 0;

    noteItems.forEach(item => {
      const title = item.getAttribute('data-title') || '';
      const tags = item.getAttribute('data-tags') || '';

      const matchesSearch = currentSearch === '' || title.includes(currentSearch);
      const matchesTag = currentTag === 'all' || tags.includes(currentTag);

      if (matchesSearch && matchesTag) {
        (item as HTMLElement).style.display = '';
        visibleCount++;

        // Highlight search matches
        if (currentSearch) {
          const titleEl = item.querySelector('.note-title');
          if (titleEl) {
            const text = titleEl.textContent || '';
            const regex = new RegExp(`(${currentSearch})`, 'gi');
            titleEl.innerHTML = text.replace(regex, '<mark>$1</mark>');
          }
        } else {
          const titleEl = item.querySelector('.note-title');
          if (titleEl) {
            titleEl.innerHTML = titleEl.textContent || '';
          }
        }
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });

    // Hide empty year groups
    yearGroups.forEach(group => {
      const visibleItems = group.querySelectorAll('.note-item:not([style*="display: none"])');
      (group as HTMLElement).style.display = visibleItems.length ? '' : 'none';
    });

    // Update status
    if (filterStatus) {
      filterStatus.textContent = `Showing ${visibleCount} notes`;
    }
  }
</script>


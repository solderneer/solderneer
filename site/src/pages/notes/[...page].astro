---
import type { GetStaticPaths } from "astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import tagsJson from "../../content/_tags.json";

export const getStaticPaths = (async ({ paginate }) => {
  // Get all notes
  const notes = await getCollection("notes");
  const sortedNotes = notes.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  // Render notes to get word count and reading time from remark plugins
  // Also calculate reference numbers (oldest = N001)
  const totalNotes = sortedNotes.length;
  const notesWithMeta = await Promise.all(
    sortedNotes.map(async (note, index) => {
      const { remarkPluginFrontmatter } = await note.render();
      return {
        ...note,
        wordCount: remarkPluginFrontmatter.wordCount,
        minutesRead: remarkPluginFrontmatter.minutesRead,
        refNum: totalNotes - index,  // oldest gets 1, newest gets totalNotes
      };
    })
  );

  return paginate(notesWithMeta, { pageSize: 25 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

// Group notes by year (for current page only)
const notesByYear = page.data.reduce((acc, note) => {
  const year = note.data.pubDate.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(note);
  return acc;
}, {} as Record<number, typeof page.data>);

const years = Object.keys(notesByYear).map(Number).sort((a, b) => b - a);

// Get ALL unique tags from tagsJson for the filter buttons
const allTags = Object.keys(tagsJson);

// Format date for display
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric'
  });
}

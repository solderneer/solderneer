  }

  .notes-timeline :global(.note-details) {
    display: flex;
    gap: 12px;
    margin-top: 4px;
    opacity: 0;
    transform: translateY(-4px);
    transition: opacity 0.2s, transform 0.2s;
  }

  .notes-timeline :global(.note-item:hover .note-details) {
    opacity: 1;
    transform: translateY(0);
  }

  .notes-timeline :global(.note-detail) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.6rem;
    color: var(--text-tertiary);
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .notes-timeline :global(.note-detail::before) {
    content: '';
    width: 3px;
    height: 3px;
    background: var(--border);
    border-radius: 50%;
  }

  .notes-timeline :global(.note-detail:first-child::before) {
    display: none;
  }

  .notes-timeline :global(mark) {
    background: rgba(30, 58, 95, 0.15);
    color: inherit;
    padding: 0 2px;
  }

  .notes-timeline :global(.no-results) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: var(--text-tertiary);
    text-align: center;
    padding: 40px 0;
  }

  .pagination {
    padding: 24px 0 80px;
    border-top: 1px solid var(--border);
    text-align: center;
  }

  .pagination :global(.pagination-info) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    margin-bottom: 16px;
  }

  .pagination :global(.pagination-links) {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }

  .pagination :global(.pagination-link) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-decoration: none;
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.15s;
  }

  .pagination :global(.pagination-link:hover:not(.disabled)) {
    color: var(--accent);
  }

  .pagination :global(.pagination-link.disabled) {
    color: var(--text-tertiary);
    opacity: 0.5;
    cursor: default;
  }

  .pagination :global(.pagination-pages) {
    display: flex;
    gap: 4px;
  }

  .pagination :global(.page-num) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 4px 8px;
    border: 1px solid var(--border);
    background: transparent;
    cursor: pointer;
    transition: all 0.15s;
  }

  .pagination :global(.page-num:hover) {
    border-color: var(--accent);
    color: var(--accent);
  }

  .pagination :global(.page-num.active) {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  @media (max-width: 500px) {
    .notes-timeline :global(.note-item) {
      grid-template-columns: 1fr;
      gap: 4px;
    }

    .notes-timeline :global(.note-date) {
      padding-top: 0;
    }

    .notes-timeline :global(.note-details) {
      opacity: 1;
      transform: none;
    }

    .search-hint {
      display: none;
    }

    .pagination :global(.pagination-pages) {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

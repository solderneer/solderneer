    margin-bottom: 20px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--border);
  }

  .notes-timeline :global(.notes-list) {
    list-style: none;
  }

  .notes-timeline :global(.note-item) {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 20px;
    padding: 12px 0;
    border-bottom: 1px solid var(--border);
  }

  .notes-timeline :global(.note-item:last-child) {
    border-bottom: none;
  }

  .notes-timeline :global(.note-item a) {
    text-decoration: none;
    display: block;
  }

  .notes-timeline :global(.note-date) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    padding-top: 2px;
  }

  .notes-timeline :global(.note-content) {
    min-width: 0;
  }

  .notes-timeline :global(.note-title) {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text);
    margin-bottom: 4px;
    transition: color 0.15s;
  }

  .notes-timeline :global(.note-ref) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    margin-right: 8px;
  }

  .notes-timeline :global(.note-content a:hover .note-title) {
    color: var(--accent);
  }

  .notes-timeline :global(.note-tag) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    color: var(--accent);

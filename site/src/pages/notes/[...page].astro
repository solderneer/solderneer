---
import type { GetStaticPaths } from "astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import tagsJson from "../../content/_tags.json";

export const getStaticPaths = (async ({ paginate }) => {
  const notes = await getCollection("notes");
  const sortedNotes = notes.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  const totalNotes = sortedNotes.length;
  const notesWithMeta = await Promise.all(
    sortedNotes.map(async (note, index) => {
      const { remarkPluginFrontmatter } = await note.render();
      return {
        ...note,
        wordCount: remarkPluginFrontmatter.wordCount,
        minutesRead: remarkPluginFrontmatter.minutesRead,
        refNum: totalNotes - index,
      };
    })
  );

  return paginate(notesWithMeta, { pageSize: 25 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

const notesByYear = page.data.reduce((acc, note) => {
  const year = note.data.pubDate.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(note);
  return acc;
}, {} as Record<number, typeof page.data>);

const years = Object.keys(notesByYear).map(Number).sort((a, b) => b - a);

const allTags = Object.keys(tagsJson);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric'
  });
}
---

<BaseLayout title="Notes" description="Research notes and technical documentation" showHeader={false}>
  <div class="notes-archive">
    <header class="archive-header">
      <a href="/" class="back-link">← solderneer</a>
      <h1>Notes</h1>
      <div class="subtitle">working notes and lab logs</div>
      <div class="header-border">
        <div class="rune-scroll">
          <span>∂</span><span>/</span><span>∂</span><span>t</span><span>R</span><span>=</span><span>V</span><span>/</span><span>I</span><span>λ</span><span>=</span><span>h</span><span>/</span><span>p</span><span>τ</span><span>=</span><span>R</span><span>C</span><span>P</span><span>=</span><span>I</span><span>V</span><span>∂</span><span>/</span><span>∂</span><span>t</span><span>R</span><span>=</span><span>V</span><span>/</span><span>I</span><span>λ</span><span>=</span><span>h</span><span>/</span><span>p</span><span>τ</span><span>=</span><span>R</span><span>C</span><span>P</span><span>=</span><span>I</span><span>V</span><span>∂</span><span>/</span><span>∂</span><span>t</span><span>R</span><span>=</span><span>V</span><span>/</span><span>I</span><span>λ</span><span>=</span><span>h</span><span>/</span><span>p</span><span>τ</span><span>=</span><span>R</span><span>C</span><span>P</span><span>=</span><span>I</span><span>V</span><span>∂</span><span>/</span><span>∂</span><span>t</span><span>R</span><span>=</span><span>V</span><span>/</span><span>I</span><span>λ</span><span>=</span><span>h</span><span>/</span><span>p</span><span>τ</span><span>=</span><span>R</span><span>C</span><span>P</span><span>=</span><span>I</span><span>V</span>
        </div>
      </div>
    </header>

    <div class="search-container">
      <span class="search-icon">/</span>
      <input
        type="text"
        class="search-input"
        id="search-input"
        placeholder="search notes..."
        autocomplete="off"
        aria-label="Search notes"
      />
      <span class="search-hint">press /</span>
    </div>

    <div class="tags-filter" role="navigation" aria-label="Filter by tag">
      <a href="/notes/" class="tag-btn active" aria-current="page">all</a>
      {allTags.map((tag) => (
        <a href={`/notes/tag/${tag}/`} class="tag-btn">{tag}</a>
      ))}
    </div>

    <div class="filter-status" id="filter-status" aria-live="polite"></div>

    <div class="notes-timeline filtered-results" id="filtered-results" style="display: none;"></div>

    <div class="notes-timeline" id="paginated-notes">
      {years.map((year) => (
        <div class="year-group" data-year={year}>
          <h2 class="year-label">{year}</h2>
          <ul class="notes-list">
            {notesByYear[year].map((note) => (
              <li class="note-item">
                <div class="note-date">{formatDate(note.data.pubDate)}</div>
                <div class="note-content">
                  <a href={`/notes/${note.slug}/`}>
                    <span class="note-title">
                      <span class="note-ref">N{String(note.refNum).padStart(3, '0')}</span>
                      {note.data.title}
                    </span>
                    <span class="note-tag">{note.data.tags[0]}</span>
                    <div class="note-details">
                      {note.wordCount && (
                        <span class="note-detail">{note.wordCount} words</span>
                      )}
                      {note.minutesRead && (
                        <span class="note-detail">{note.minutesRead}</span>
                      )}
                    </div>
                  </a>
                </div>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <nav class="pagination" id="pagination" aria-label="Notes pagination">
      <div class="pagination-info">
        Page {page.currentPage} of {page.lastPage} • {page.total} notes total
      </div>
      <div class="pagination-links">
        {page.url.prev ? (
          <a href={page.url.prev} class="pagination-link" aria-label="Go to previous page">← Newer</a>
        ) : (
          <span class="pagination-link disabled" aria-disabled="true">← Newer</span>
        )}

        <div class="pagination-pages">
          {Array.from({ length: page.lastPage }, (_, i) => i + 1).map((pageNum) => (
            <a
              href={pageNum === 1 ? '/notes/' : `/notes/${pageNum}/`}
              class:list={['page-num', { active: pageNum === page.currentPage }]}
              aria-label={`Go to page ${pageNum}`}
              aria-current={pageNum === page.currentPage ? 'page' : undefined}
            >
              {pageNum}
            </a>
          ))}
        </div>

        {page.url.next ? (
          <a href={page.url.next} class="pagination-link" aria-label="Go to next page">Older →</a>
        ) : (
          <span class="pagination-link disabled" aria-disabled="true">Older →</span>
        )}
      </div>
    </nav>
  </div>
</BaseLayout>

<script>
  import { NotesSearch } from '../../scripts/notes-search';
  new NotesSearch();
</script>

<style>
  .notes-archive {
    max-width: 720px;
  }

  .archive-header {
    padding: 40px 0 0;
  }

  .back-link {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 20px;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--accent);
  }

  h1 {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    margin-bottom: 4px;
  }

  .subtitle {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-bottom: 12px;
  }

  .header-border {
    width: 100%;
    height: 28px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .rune-scroll {
    display: flex;
    gap: 0;
    animation: scroll 40s linear infinite;
    white-space: nowrap;
  }

  .rune-scroll span {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 11px;
    color: var(--accent);
    opacity: 0.55;
    display: inline-block;
    animation: float 2s ease-in-out infinite;
    letter-spacing: 0.4em;
  }

  .rune-scroll span:nth-child(4n) { animation-delay: 0s; animation-duration: 1.8s; }
  .rune-scroll span:nth-child(4n+1) { animation-delay: 0.15s; animation-duration: 2.1s; }
  .rune-scroll span:nth-child(4n+2) { animation-delay: 0.3s; animation-duration: 1.6s; }
  .rune-scroll span:nth-child(4n+3) { animation-delay: 0.5s; animation-duration: 2.3s; }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    25% { transform: translateY(-3px); }
    50% { transform: translateY(1px); }
    75% { transform: translateY(-2px); }
  }

  .search-container {
    position: relative;
    margin-bottom: 16px;
    margin-top: 24px;
  }

  .search-icon {
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: var(--text-tertiary);
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 10px 12px 10px 32px;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    border: 1px solid var(--border);
    background: var(--bg);
    color: var(--text);
    outline: none;
    transition: border-color 0.15s;
  }

  .search-input:focus {
    border-color: var(--accent);
  }

  .search-input::placeholder {
    color: var(--text-tertiary);
  }

  .search-hint {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    color: var(--text-tertiary);
    background: var(--bg-code);
    padding: 2px 6px;
    border-radius: 3px;
  }

  .tags-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 8px;
  }

  .tag-btn {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    padding: 4px 10px;
    border: 1px solid var(--border);
    background: transparent;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.15s;
    text-decoration: none;
  }

  .tag-btn:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .tag-btn.active {

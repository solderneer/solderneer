    <div class="notes-timeline filtered-results" id="filtered-results" style="display: none;"></div>

    <!-- Paginated notes timeline (shown by default) -->
    <div class="notes-timeline" id="paginated-notes">
      {years.map((year) => (
        <div class="year-group" data-year={year}>
          <h2 class="year-label">{year}</h2>
          <ul class="notes-list">
            {notesByYear[year].map((note) => (
              <li class="note-item">
                <div class="note-date">{formatDate(note.data.pubDate)}</div>
                <div class="note-content">
                  <a href={`/notes/${note.slug}/`}>
                    <span class="note-title">
                      <span class="note-ref">N{String(note.refNum).padStart(3, '0')}</span>
                      {note.data.title}
                    </span>
                    <span class="note-tag">{note.data.tags[0]}</span>
                    <div class="note-details">
                      {note.wordCount && (
                        <span class="note-detail">{note.wordCount} words</span>
                      )}
                      {note.minutesRead && (
                        <span class="note-detail">{note.minutesRead}</span>
                      )}
                    </div>
                  </a>
                </div>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Pagination (hidden when filtering) -->
    <nav class="pagination" id="pagination">
      <div class="pagination-info">
        Page {page.currentPage} of {page.lastPage} • {page.total} notes total
      </div>
      <div class="pagination-links">
        {page.url.prev ? (
          <a href={page.url.prev} class="pagination-link">← Newer</a>
        ) : (
          <span class="pagination-link disabled">← Newer</span>
        )}

        <div class="pagination-pages">
          {Array.from({ length: page.lastPage }, (_, i) => i + 1).map((pageNum) => (
            <a
              href={pageNum === 1 ? '/notes/' : `/notes/${pageNum}/`}
              class:list={['page-num', { active: pageNum === page.currentPage }]}
            >
              {pageNum}
            </a>
          ))}
        </div>

        {page.url.next ? (
          <a href={page.url.next} class="pagination-link">Older →</a>
        ) : (
          <span class="pagination-link disabled">Older →</span>
        )}
      </div>
    </nav>
  </div>
</BaseLayout>

<script>
  interface Note {
    slug: string;
    title: string;
    pubDate: string;
    tags: string[];
    wordCount: number;
    minutesRead: string;
    refNum: number;
  }

  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const searchHint = document.querySelector('.search-hint') as HTMLElement;
  const filterStatus = document.getElementById('filter-status');
  const tagButtons = document.querySelectorAll('.tag-btn');
  const paginatedNotes = document.getElementById('paginated-notes') as HTMLElement;
  const filteredResults = document.getElementById('filtered-results') as HTMLElement;
  const pagination = document.getElementById('pagination') as HTMLElement;

  let currentTag = 'all';
  let currentSearch = '';
  let allNotesCache: Note[] | null = null;

  // Format date for display
  function formatDate(dateStr: string): string {
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', {
      month: 'short',
      day: 'numeric'
    });
  }

  // Escape HTML to prevent XSS
  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Highlight search matches in text
  function highlightMatch(text: string, search: string): string {
    if (!search) return escapeHtml(text);
    const escaped = escapeHtml(text);
    const regex = new RegExp(`(${search.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
    return escaped.replace(regex, '<mark>$1</mark>');
  }

  // Fetch all notes data
  async function fetchAllNotes(): Promise<Note[]> {
    if (allNotesCache) return allNotesCache;
    const response = await fetch('/notes.json');
    allNotesCache = await response.json();
    return allNotesCache!;
  }

  // Render filtered notes
  function renderFilteredNotes(notes: Note[]): void {
    // Group by year
    const notesByYear: Record<number, Note[]> = {};
    notes.forEach(note => {
      const year = new Date(note.pubDate).getFullYear();
      if (!notesByYear[year]) notesByYear[year] = [];
      notesByYear[year].push(note);
    });

    const years = Object.keys(notesByYear).map(Number).sort((a, b) => b - a);

    let html = '';
    years.forEach(year => {
      html += `<div class="year-group">
        <h2 class="year-label">${year}</h2>
        <ul class="notes-list">`;

      notesByYear[year].forEach(note => {
        const refNum = String(note.refNum).padStart(3, '0');
        const dateStr = formatDate(note.pubDate);
        const titleHtml = highlightMatch(note.title, currentSearch);
        const tag = note.tags[0] || '';

        html += `<li class="note-item">
          <div class="note-date">${dateStr}</div>
          <div class="note-content">
            <a href="/notes/${note.slug}/">
              <span class="note-title">
                <span class="note-ref">N${refNum}</span>
                ${titleHtml}
              </span>
              <span class="note-tag">${escapeHtml(tag)}</span>
              <div class="note-details">
                ${note.wordCount ? `<span class="note-detail">${note.wordCount} words</span>` : ''}
                ${note.minutesRead ? `<span class="note-detail">${escapeHtml(note.minutesRead)}</span>` : ''}
              </div>
            </a>
          </div>
        </li>`;
      });

      html += `</ul></div>`;
    });

    filteredResults.innerHTML = html;
  }

  // Filter and display notes
  async function filterNotes(): Promise<void> {
    const isFiltering = currentTag !== 'all' || currentSearch !== '';

    if (!isFiltering) {
      // Show paginated view
      paginatedNotes.style.display = '';
      filteredResults.style.display = 'none';
      pagination.style.display = '';
      if (filterStatus) filterStatus.textContent = '';
      return;
    }

    // Show filtered view
    paginatedNotes.style.display = 'none';
    filteredResults.style.display = '';
    pagination.style.display = 'none';

    // Fetch all notes and filter
    const allNotes = await fetchAllNotes();
    const filtered = allNotes.filter(note => {
      const titleLower = note.title.toLowerCase();
      const tagsStr = note.tags.join(',').toLowerCase();

      const matchesSearch = currentSearch === '' ||
        titleLower.includes(currentSearch) ||
        tagsStr.includes(currentSearch);
      const matchesTag = currentTag === 'all' || note.tags.includes(currentTag);

      return matchesSearch && matchesTag;
    });

    renderFilteredNotes(filtered);

    // Update status
    if (filterStatus) {
      const parts = [];
      if (currentTag !== 'all') parts.push('#' + currentTag);
      if (currentSearch) parts.push('"' + currentSearch + '"');
      filterStatus.textContent = filtered.length + ' note' + (filtered.length !== 1 ? 's' : '') +
        (parts.length ? ' matching ' + parts.join(' + ') : '');
    }
  }

  // Focus search on / key
  document.addEventListener('keydown', (e) => {
    if (e.key === '/' && document.activeElement !== searchInput) {
      e.preventDefault();
      searchInput.focus();
    }
    if (e.key === 'Escape') {
      searchInput.blur();
      searchInput.value = '';
      currentSearch = '';
      filterNotes();
    }
  });

  // Hide/show search hint on focus/blur
  searchInput.addEventListener('focus', () => {
    searchHint.style.opacity = '0';
  });

  searchInput.addEventListener('blur', () => {
    if (!searchInput.value) {
      searchHint.style.opacity = '1';
    }
  });

  // Search on input
  searchInput.addEventListener('input', (e) => {
    currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
    filterNotes();
  });

  // Tag filtering
  tagButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      tagButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentTag = btn.getAttribute('data-tag') || 'all';

      // Sync URL with tag state
      const url = new URL(window.location.href);
      if (currentTag === 'all') {
        url.searchParams.delete('tag');
      } else {
        url.searchParams.set('tag', currentTag);
      }
      history.replaceState({}, '', url);

      filterNotes();
    });
  });

  // On page load, check for tag parameter in URL
  const urlParams = new URLSearchParams(window.location.search);
  const tagParam = urlParams.get('tag');
  if (tagParam) {
    // Validate against known tags to prevent XSS via querySelector
    const validTags = Array.from(tagButtons).map(btn => btn.getAttribute('data-tag'));
    if (validTags.includes(tagParam)) {
      const tagBtn = document.querySelector(`.tag-btn[data-tag="${tagParam}"]`) as HTMLElement;
      if (tagBtn) {
        tagBtn.click();
      }
    } else {
      // Invalid tag - clear the URL parameter
      const url = new URL(window.location.href);
      url.searchParams.delete('tag');
      history.replaceState({}, '', url);
    }
  }
</script>


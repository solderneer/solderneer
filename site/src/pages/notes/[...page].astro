    </nav>
  </div>
</BaseLayout>

<script>
  // Search functionality
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const searchHint = document.querySelector('.search-hint') as HTMLElement;
  const noteItems = document.querySelectorAll('.note-item');
  const yearGroups = document.querySelectorAll('.year-group');
  const filterStatus = document.getElementById('filter-status');
  const tagButtons = document.querySelectorAll('.tag-btn');

  let currentTag = 'all';
  let currentSearch = '';

  // Focus search on / key
  document.addEventListener('keydown', (e) => {
    if (e.key === '/' && document.activeElement !== searchInput) {
      e.preventDefault();
      searchInput.focus();
    }
    if (e.key === 'Escape') {
      searchInput.blur();
      searchInput.value = '';
      currentSearch = '';
      filterNotes();
    }
  });

  // Hide/show search hint on focus/blur
  searchInput.addEventListener('focus', () => {
    searchHint.style.opacity = '0';
  });

  searchInput.addEventListener('blur', () => {
    if (!searchInput.value) {
      searchHint.style.opacity = '1';
    }
  });

  // Search on input
  searchInput.addEventListener('input', (e) => {
    currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
    filterNotes();
  });

  // Tag filtering
  tagButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      tagButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentTag = btn.getAttribute('data-tag') || 'all';

      // Sync URL with tag state
      const url = new URL(window.location.href);
      if (currentTag === 'all') {
        url.searchParams.delete('tag');
      } else {
        url.searchParams.set('tag', currentTag);
      }
      history.replaceState({}, '', url);

      filterNotes();
    });
  });

  function filterNotes() {
    let visibleCount = 0;
    let totalWords = 0;

    noteItems.forEach(item => {
      const title = item.getAttribute('data-title') || '';
      const tags = item.getAttribute('data-tags') || '';

      const matchesSearch = currentSearch === '' || title.includes(currentSearch) || tags.includes(currentSearch);
      const matchesTag = currentTag === 'all' || tags.includes(currentTag);

      if (matchesSearch && matchesTag) {
        (item as HTMLElement).style.display = '';
        visibleCount++;

        // Highlight search matches - preserve the note-ref span
        const titleEl = item.querySelector('.note-title');
        const refEl = item.querySelector('.note-ref');
        if (titleEl && refEl) {
          const refHtml = refEl.outerHTML;
          const originalTitle = item.getAttribute('data-title-original') || '';

          if (currentSearch) {
            const regex = new RegExp(`(${currentSearch.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            const highlightedTitle = originalTitle.replace(regex, '<mark>$1</mark>');
            titleEl.innerHTML = refHtml + ' ' + highlightedTitle;
          } else {
            // Restore original structure
            titleEl.innerHTML = refHtml + ' ' + originalTitle;
          }
        }
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });

    // Hide empty year groups
    yearGroups.forEach(group => {
      const visibleItems = group.querySelectorAll('.note-item:not([style*="display: none"])');
      (group as HTMLElement).style.display = visibleItems.length ? '' : 'none';
    });

    // Update status - only show when filtering
    if (filterStatus) {
      if (currentTag === 'all' && !currentSearch) {
        filterStatus.textContent = '';
      } else {
        const parts = [];
        if (currentTag !== 'all') parts.push('#' + currentTag);
        if (currentSearch) parts.push('"' + currentSearch + '"');
        filterStatus.textContent = visibleCount + ' note' + (visibleCount !== 1 ? 's' : '') +
          (parts.length ? ' matching ' + parts.join(' + ') : '');
      }
    }
  }

  // On page load, check for tag parameter in URL
  const urlParams = new URLSearchParams(window.location.search);
  const tagParam = urlParams.get('tag');
  if (tagParam) {
    // Validate against known tags to prevent XSS via querySelector
    const validTags = Array.from(tagButtons).map(btn => btn.getAttribute('data-tag'));
    if (validTags.includes(tagParam)) {
      const tagBtn = document.querySelector(`.tag-btn[data-tag="${tagParam}"]`) as HTMLElement;
      if (tagBtn) {
        tagBtn.click();
      }
    } else {
      // Invalid tag - clear the URL parameter
      const url = new URL(window.location.href);
      url.searchParams.delete('tag');
      history.replaceState({}, '', url);
    }
  }
</script>


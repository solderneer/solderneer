---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getCollection } from "astro:content";

// Get all notes, sorted by date
const allNotes = await getCollection("notes");
const totalNotes = allNotes.length;
const sortedNotes = allNotes.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Check if we have notes
if (sortedNotes.length === 0) {
  throw new Error("No notes found. Add at least one note to build the site.");
}

// Calculate refNum for all notes upfront (O(n) instead of O(n²))
const notesWithRefNum = sortedNotes.map((note, index) => ({
  ...note,
  refNum: totalNotes - index
}));

// Latest note for featured section
const latestNote = notesWithRefNum[0];

// Highlight notes (tagged with 'highlight') - take 2 most recent
const highlightNotes = notesWithRefNum
  .filter(note => note.data.tags.includes('highlight'))
  .slice(0, 2);

// Recent notes for list (next 8 after latest)
const recentNotes = notesWithRefNum.slice(1, 9);

// Format date for display
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
}
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="main-content">
    <!-- Left Column: Latest + Highlights -->
    <div class="left-column">
      <!-- Featured Latest Note -->
      <section class="featured-latest">
        <a href={`/notes/${latestNote.slug}/`}>
          <h2 class="featured-title">
            <span class="note-ref">N{String(latestNote.refNum).padStart(3, '0')}</span>
            {latestNote.data.title}
          </h2>
          {latestNote.data.description && (
            <p class="featured-excerpt">{latestNote.data.description}</p>
          )}
          <div class="featured-meta">
            <span>{formatDate(latestNote.data.pubDate)}</span>
            {latestNote.data.tags?.[0] && (
              <span class="note-tag">{latestNote.data.tags[0]}</span>
            )}
          </div>
        </a>
      </section>

      <!-- Highlights -->
      {highlightNotes.length > 0 && (
        <section class="highlights">
          <div class="section-header">
            <h2>Highlights</h2>
          </div>
          <ul class="highlights-list">
            {highlightNotes.map((note) => (
              <li class="highlight-item">
                <a href={`/notes/${note.slug}/`}>
                  <h3 class="highlight-title">
                    <span class="note-ref">N{String(note.refNum).padStart(3, '0')}</span>
                    {note.data.title}
                  </h3>
                  {note.data.description && (
                    <p class="highlight-excerpt">{note.data.description}</p>
                  )}
                  <div class="highlight-meta">
                    <span>{formatDate(note.data.pubDate)}</span>
                    {note.data.tags?.filter(t => t !== 'highlight')[0] && (
                      <span class="note-tag">{note.data.tags.filter(t => t !== 'highlight')[0]}</span>
                    )}
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </section>
      )}
    </div>

    <!-- Right Column: Recent Notes -->
    <div class="right-column">
      <div class="section-header">
        <h2>Recent Notes</h2>
        <a href="/notes">View all →</a>
      </div>
      <ul class="notes-list">
        {recentNotes.map((note) => (
          <li class="note-item">
            <a href={`/notes/${note.slug}/`}>
              <span class="note-title">
                <span class="note-ref">N{String(note.refNum).padStart(3, '0')}</span>
                {note.data.title}
              </span>
              <div class="note-meta">
                <span>{formatDate(note.data.pubDate)}</span>
                {note.data.tags?.[0] && (
                  <span class="note-tag">{note.data.tags[0]}</span>
                )}
              </div>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Collections Section -->
  <section class="collections">
    <div class="section-header">
      <h2>Collections</h2>
    </div>
    <div class="special-grid">
      <a href="/flights" class="special-card">
        <h3><span class="card-icon">◎</span> Flights</h3>
        <p>Drone footage from above. Landscapes, cities, and the patterns only visible from the air.</p>
      </a>
      <a href="/objects" class="special-card">
        <h3><span class="card-icon">◈</span> Object Library</h3>
        <p>A catalog of beautiful products. Hardware that earns its place in the world.</p>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Main Content Grid */
  .main-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
    border-top: 1px solid var(--border);
    margin-top: 32px;
  }

  @media (min-width: 800px) {
    .main-content {
      grid-template-columns: 1.4fr 1fr;
      gap: 48px;
    }
  }

  /* Left Column */
  .left-column {
    padding: 32px 0;
  }

  @media (min-width: 800px) {
    .left-column {
      padding-right: 48px;
      border-right: 1px solid var(--border);
    }
  }

  /* Right Column */
  .right-column {
    padding: 32px 0;
    border-top: 1px solid var(--border);
  }

  @media (min-width: 800px) {
    .right-column {
      border-top: none;
    }
  }

  /* Featured Latest Note */
  .featured-latest {
    margin-bottom: 32px;
    padding-bottom: 32px;
    border-bottom: 1px solid var(--border);
  }

  .featured-latest a {
    text-decoration: none;
    display: block;
  }

  .featured-title {
    font-size: 1.6rem;
    font-weight: 500;
    color: var(--text);
    line-height: 1.3;
    margin-bottom: 12px;
    transition: color 0.15s;
  }

  .featured-latest a:hover .featured-title {
    color: var(--accent);
  }

  .featured-excerpt {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 12px;
  }

  .featured-meta {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    display: flex;
    gap: 12px;
  }

  /* Highlights Section */
  .highlights {
    padding-top: 0;
  }

  .highlights-list {
    list-style: none;
  }

  .highlight-item {
    padding: 16px 0;
    border-bottom: 1px solid var(--border);
  }

  .highlight-item:last-child {
    border-bottom: none;
  }

  .highlight-item a {
    text-decoration: none;
    display: block;
  }

  .highlight-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--text);
    margin-bottom: 6px;
    transition: color 0.15s;
  }

  .highlight-item a:hover .highlight-title {
    color: var(--accent);
  }

  .highlight-excerpt {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 8px;
  }

  .highlight-meta {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    display: flex;
    gap: 12px;
  }

  /* Section Header */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 24px;
  }

  .section-header h2 {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--accent);
  }

  .section-header a {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    text-decoration: none;
  }

  .section-header a:hover {
    color: var(--accent);
  }

  /* Note Reference */
  .note-ref {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    margin-right: 8px;
  }

  /* Notes list */
  .notes-list {
    list-style: none;
  }

  .note-item {
    padding: 12px 0;
    border-bottom: 1px solid var(--border);
  }

  .note-item:last-child {
    border-bottom: none;
  }

  .note-item a {
    text-decoration: none;
    display: block;
  }

  .note-title {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text);
    margin-bottom: 4px;
    transition: color 0.15s;
    display: block;
  }

  .note-item a:hover .note-title {
    color: var(--accent);
  }

  .note-meta {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    color: var(--text-tertiary);
    display: flex;
    gap: 10px;
  }

  .note-tag {
    color: var(--accent);
  }

  /* Collections section */
  .collections {
    padding: 48px 0;
    border-top: 1px solid var(--border);
  }

  .special-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  @media (max-width: 500px) {
    .special-grid {
      grid-template-columns: 1fr;
    }
  }

  .special-card {
    border: 1px solid var(--border);
    padding: 24px;
    text-decoration: none;
    display: block;
    transition: border-color 0.15s, background 0.15s;
  }

  .special-card:hover {
    border-color: var(--accent);
    background: #f5f7fa;
  }

  .special-card h3 {
    font-size: 1rem;
    font-weight: 500;
    color: var(--text);
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .special-card p {
    font-size: 0.85rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .card-icon {
    font-size: 1.1rem;
  }

  .text-secondary {
    color: var(--text-secondary);
  }
</style>

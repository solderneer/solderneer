---
import type { CollectionEntry } from "astro:content";

import FormattedDate from "../components/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";

type Props = CollectionEntry<"essays">["data"];

const { title, description, pubDate, updatedDate, tags, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <article class="essay-article">
    <header class="essay-header">
      {heroImage && (
        <div
          class="hero-image"
          style={`background-image: url(${heroImage})`}
        />
      )}

      <a href="/essays" class="back-link">← Essays</a>

      <h1 id="title">{title}</h1>

      {description && (
        <p class="description">{description}</p>
      )}

      <div class="meta">
        <span class="date">
          <FormattedDate date={pubDate} />
          {updatedDate && (
            <span> · Updated <FormattedDate date={updatedDate} /></span>
          )}
        </span>
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="essay-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .essay-article {
    max-width: 640px;
  }

  .back-link {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 24px;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .hero-image {
    width: 100%;
    height: 300px;
    background-size: cover;
    background-position: center;
    border-radius: 4px;
    margin-bottom: 32px;
  }

  .essay-header {
    margin-bottom: 48px;
    padding-bottom: 32px;
    border-bottom: 1px solid var(--border);
  }

  h1 {
    font-family: 'IBM Plex Serif', Georgia, serif;
    font-size: 2.2rem;
    font-weight: 500;
    line-height: 1.25;
    color: var(--text);
    margin-bottom: 16px;
  }

  .description {
    font-size: 1.15rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .meta {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
  }

  .tags {
    display: flex;
    gap: 8px;
  }

  .tag {
    color: var(--accent);
  }

  /* Essay content with dropcap */
  .essay-content {
    font-family: 'IBM Plex Serif', Georgia, serif;
    line-height: 1.75;
    color: var(--text);
  }

  /* Dropcap for first paragraph */
  .essay-content :global(> p:first-of-type::first-letter) {
    float: left;
    font-size: 3.5rem;
    line-height: 1;
    font-weight: 500;
    margin-right: 8px;
    margin-top: 4px;
    color: var(--accent);
  }

  .essay-content :global(h1),
  .essay-content :global(h2),
  .essay-content :global(h3),
  .essay-content :global(h4) {
    font-family: 'IBM Plex Mono', monospace;
    color: var(--text);
    margin-top: 2.5em;
    margin-bottom: 0.75em;
  }

  .essay-content :global(h2) { font-size: 1.3rem; }
  .essay-content :global(h3) { font-size: 1.15rem; }

  .essay-content :global(p) {
    margin-bottom: 1.75em;
  }

  .essay-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .essay-content :global(a:hover) {
    color: var(--accent-light);
  }

  .essay-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1.25em;
    margin: 2em 0;
    color: var(--text-secondary);
    font-style: italic;
    font-size: 1.1rem;
  }

  .essay-content :global(code) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.9em;
    background: var(--bg-code);
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }

  .essay-content :global(pre) {
    background: var(--bg-code);
    padding: 1.25em;
    border-radius: 4px;
    overflow-x: auto;
    margin: 2em 0;
  }

  .essay-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .essay-content :global(ul),
  .essay-content :global(ol) {
    margin: 1.5em 0;
    padding-left: 1.5em;
  }

  .essay-content :global(li) {
    margin-bottom: 0.75em;
  }

  .essay-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 3em 0;
  }

  .essay-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 2em 0;
  }

  /* Sidenotes - for future enhancement */
  .essay-content :global(.sidenote) {
    font-size: 0.8rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  @media (min-width: 1100px) {
    .essay-article {
      position: relative;
    }

    .essay-content :global(.sidenote) {
      position: absolute;
      right: -260px;
      width: 220px;
      margin-top: 0;
    }
  }
</style>

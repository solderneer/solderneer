---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseHead from "../components/BaseHead.astro";
import NavLink from "../components/NavLink.astro";

const { title, description, emoji } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} emoji={emoji} />
  </head>

  <body
    id="top"
    class="flex flex-col lg:flex-row p-4 lg:p-12 max-w-7xl mx-auto lining-nums text-neutral-700"
  >
    <nav class="w-full lg:w-80 lg:sticky top-0 h-fit py-4 lg:mr-16">
      <h1 class="text-4xl lg:text-5xl font-bold rainbow-button">
        <a href="/">{SITE_TITLE}</a>
      </h1>

      <p class="mt-2 text-sm italic">
        {SITE_DESCRIPTION}
      </p>

      <span class="text-2xl flex gap-3 mt-4">
        <a href="https://twitter.com/solderneer"
          ><i class="fa-brands fa-twitter rainbow-button"></i></a
        >
        <a href="https://www.linkedin.com/in/solderneer/"
          ><i class="fa-brands fa-linkedin rainbow-button"></i></a
        >
        <a href="https://github.com/solderneer"
          ><i class="fa-brands fa-github rainbow-button"></i></a
        >
        <a href="/rss.xml"><i class="fa-solid fa-rss rainbow-button"></i></a>
      </span>

      <h3 class="text-violet-500 font-black mt-5 lg:mt-10 mb-2 text-xl">
        Pages
      </h3>
      <div class="flex flex-col bg-violet-100 p-5 rounded-md drop-shadow">
        <NavLink href="/" emoji="🏠">Home</NavLink>
        <NavLink href="/posts/about" emoji="😎">About Me</NavLink>
        <NavLink href="/posts" emoji="📝">Posts</NavLink>
        <NavLink href="https://thoughts.solderneer.me/" emoji="🌳">
          Garden
        </NavLink>
        <NavLink
          href="https://solderneer.notion.site/7f580c6801a1407a849d2dd01752c815?v=fb709826213142b7b9bd8f2e7d91b02c"
          emoji="📚"
        >
          Library
        </NavLink>
      </div>

      <div
        class="bg-neutral-100 px-5 py-2 rounded-md mt-5 hidden lg:flex flex-col drop-shadow"
      >
        <NavLink href="/#top" emoji="🆙">Back to Top</NavLink>
      </div>
    </nav>
    <div
      class="sticky top-10 mt-3 mb-10 bg-neutral-100 px-5 py-2 rounded-md block lg:hidden drop-shadow"
    >
      <NavLink href="/#top" emoji="🆙">Back to Top</NavLink>
    </div>
    <main class="max-w-3xl"><slot /></main>
  </body>
</html>

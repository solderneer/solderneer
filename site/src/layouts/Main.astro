---
import { SITE_TITLE } from "../consts";
import BaseHead from "../components/BaseHead.astro";
import NavLink from "../components/NavLink.astro";

const { title, description } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body
    id="top"
    class="flex flex-col lg:flex-row p-8 lg:p-12 max-w-7xl mx-auto lining-nums"
  >
    <nav
      class="w-full lg:w-80 lg:sticky top-0 h-fit py-4 lg:mr-16 text-neutral-800"
    >
      <h1 class="text-4xl lg:text-5xl font-bold text-neutral-800 rainbow">
        <a href="/">{SITE_TITLE}</a>
      </h1>

      <p class="mt-2 text-sm italic">
        ~ where Sudharshan (aka solderneer) practices technological magic
      </p>

      <span class="text-2xl flex gap-3 mt-4 text-neutral-800">
        <a href="https://twitter.com/solderneer"
          ><i class="fa-brands fa-twitter"></i></a
        >
        <a href="https://www.linkedin.com/in/solderneer/"
          ><i class="fa-brands fa-linkedin"></i></a
        >
        <a href="https://github.com/solderneer"
          ><i class="fa-brands fa-github"></i></a
        >
        <a href=""><i class="fa-solid fa-rss"></i></a>
      </span>

      <h3 class="text-violet-500 font-black mt-5 lg:mt-10 mb-2 text-xl">
        Pages
      </h3>
      <div class="flex flex-col bg-violet-200 p-5 rounded-md drop-shadow">
        <NavLink href="/" emoji="🏠">Home</NavLink>
        <NavLink href="/blog" emoji="📝">Feed</NavLink>
        <NavLink href="https://thoughts.solderneer.me/" emoji="🌳">
          Garden
        </NavLink>
        <NavLink
          href="https://solderneer.notion.site/7f580c6801a1407a849d2dd01752c815?v=fb709826213142b7b9bd8f2e7d91b02c"
          emoji="📚"
        >
          Library
        </NavLink>
      </div>

      <div
        class="bg-neutral-100 px-5 py-4 rounded-md mt-10 hidden lg:flex flex-col"
      >
        <NavLink href="/#top" emoji="🆙">Back to Top</NavLink>
      </div>
    </nav>
    <div
      class="sticky top-10 mt-3 mb-10 bg-neutral-100 px-5 py-4 rounded-md block lg:hidden"
    >
      <NavLink href="/#top" emoji="🆙">Back to Top</NavLink>
    </div>
    <main class="max-w-3xl"><slot /></main>
  </body>
</html>

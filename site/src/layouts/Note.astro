---
import type { CollectionEntry } from "astro:content";

import FormattedDate from "../components/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";

type Props = CollectionEntry<"notes">["data"];

const { title, description, pubDate, updatedDate, tags, originalPost, heroImage } = Astro.props;

// Extract hostname from original post
let showOP = false;
let hostname = "";
if (originalPost != undefined) {
  showOP = true;
  hostname = new URL(originalPost).hostname;
}
---

<BaseLayout title={title} description={description} image={heroImage}>
  <!-- Table of Contents (fixed on wide screens) -->
  <aside class="toc" id="toc">
    <h4>Contents</h4>
    <ul id="toc-list"></ul>
  </aside>

  <article class="note-article">
    <header class="note-header">
      {heroImage && (
        <div
          class="hero-image"
          style={`background-image: url(${heroImage})`}
        />
      )}

      <a href="/notes" class="back-link">← Notes</a>

      <h1 id="title">{title}</h1>

      {description && (
        <p class="description">{description}</p>
      )}

      <div class="meta">
        <span class="date">
          <FormattedDate date={pubDate} />
          {updatedDate && (
            <span> · Updated <FormattedDate date={updatedDate} /></span>
          )}
        </span>
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map((tag: string) => (
              <a href={`/tags/${tag}`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </div>

      {showOP && (
        <div class="original-post">
          <span>Originally posted on </span>
          <a href={originalPost}>{hostname}</a>
        </div>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .note-article {
    max-width: 640px;
    position: relative;
  }

  /* Shift content left on wide screens to make room for sidenotes */
  @media (min-width: 1100px) {
    .note-article {
      margin-left: calc(50% - 320px - 140px);
    }
  }

  .back-link {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 24px;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .hero-image {
    width: 100%;
    height: 240px;
    background-size: cover;
    background-position: center;
    border-radius: 4px;
    margin-bottom: 24px;
  }

  .note-header {
    margin-bottom: 48px;
    padding-bottom: 32px;
    border-bottom: 1px solid var(--border);
  }

  h1 {
    font-family: 'IBM Plex Serif', Georgia, serif;
    font-size: 2rem;
    font-weight: 500;
    line-height: 1.3;
    color: var(--text);
    margin-bottom: 12px;
  }

  .description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 16px;
  }

  .meta {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-tertiary);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
  }

  .tags {
    display: flex;
    gap: 8px;
  }

  .tag {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.15s;
  }

  .tag:hover {
    color: var(--accent-light);
  }

  .original-post {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-top: 16px;
    padding: 12px 16px;
    background: var(--bg-code);
    border-radius: 4px;
  }

  .original-post a {
    color: var(--accent);
    text-decoration: underline;
  }

  .prose {
    font-family: 'IBM Plex Serif', Georgia, serif;
    line-height: 1.7;
    color: var(--text);
  }

  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    font-family: 'IBM Plex Serif', Georgia, serif;
    color: var(--text);
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .prose :global(h1) { font-size: 1.5rem; margin: 2em 0 0.8em; }
  .prose :global(h2) { font-size: 1.3rem; margin: 2.5em 0 1em; }
  .prose :global(h3) { font-size: 1.1rem; margin: 2em 0 0.8em; }

  .prose :global(p) {
    margin-bottom: 1.5em;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: var(--accent-light);
  }

  .prose :global(blockquote) {
    border-left: 2px solid var(--border);
    padding-left: 1.5em;
    margin: 2em 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  .prose :global(code) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.9em;
    background: var(--bg-code);
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }

  .prose :global(pre) {
    background: var(--bg-code);
    padding: 1em;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5em 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 1em 0;
    padding-left: 1.5em;
  }

  .prose :global(li) {
    margin-bottom: 0.5em;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2em 0;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }

  /* Dropcap for first paragraph */
  .prose :global(> p:first-of-type::first-letter) {
    float: left;
    font-size: 3.5rem;
    line-height: 0.8;
    font-weight: 500;
    margin-right: 0.1em;
    margin-top: 0.1em;
    color: var(--text);
  }

  /* Wiki link styling */
  .prose :global(a.new) {
    color: var(--text-tertiary);
    text-decoration: none;
    cursor: default;
  }

  /* Sidenote paragraph wrapper */
  .prose :global(.has-sidenote) {
    position: relative;
  }

  /* Backlinks section */
  .prose :global(.backlinks) {
    margin-top: 4em;
    padding-top: 2em;
    border-top: 1px solid var(--border);
  }

  .prose :global(.backlinks h2) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin-bottom: 1.5em;
  }

  .prose :global(.backlink-list) {
    list-style: none;
    padding-left: 0;
  }

  .prose :global(.backlink-item) {
    margin-bottom: 1.2em;
  }

  .prose :global(.backlink-item a) {
    font-weight: 500;
    text-decoration: none;
    display: block;
    margin-bottom: 4px;
  }

  .prose :global(.backlink-item a:hover) {
    text-decoration: underline;
  }

  .prose :global(.backlink-item p) {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  /* Table of Contents */
  .toc {
    position: fixed;
    top: 120px;
    left: calc(50% - 320px - 140px - 240px);
    width: 180px;
    font-size: 0.8rem;
    line-height: 1.6;
    display: none;
  }

  @media (min-width: 1400px) {
    .toc {
      display: block;
    }
  }

  .toc h4 {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin-bottom: 12px;
  }

  .toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc li {
    margin-bottom: 8px;
  }

  .toc a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.15s;
  }

  .toc a:hover,
  .toc a.active {
    color: var(--text);
  }
</style>

<script>
  // Build TOC from h1 headings in prose
  document.addEventListener('DOMContentLoaded', () => {
    const tocList = document.getElementById('toc-list');
    const headings = document.querySelectorAll('.prose h1[id]');

    if (headings.length === 0) {
      const toc = document.getElementById('toc');
      if (toc) toc.style.display = 'none';
      return;
    }

    headings.forEach(heading => {
      const li = document.createElement('li');
      const a = document.createElement('a');
      a.href = `#${heading.id}`;
      a.textContent = heading.textContent;
      li.appendChild(a);
      tocList?.appendChild(li);
    });

    // Scroll spy
    const tocLinks = document.querySelectorAll('.toc a');

    function updateTOC() {
      let current = '';
      headings.forEach(heading => {
        const rect = heading.getBoundingClientRect();
        if (rect.top <= 150) {
          current = heading.getAttribute('id') || '';
        }
      });

      tocLinks.forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === '#' + current) {
          link.classList.add('active');
        }
      });
    }

    window.addEventListener('scroll', updateTOC);
    updateTOC();
  });
</script>

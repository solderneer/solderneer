---
// Rune scroll symbols - can be customized per page
const defaultRunes = "∫dx=f(x)+C∂/∂tΣn=0R=V/Iλ=h/p∇×EΔfω=2πfZ=R+jXτ=RCP=IV∮E·dlμ₀ε₀";

interface Props {
  runes?: string;
}

const { runes = defaultRunes } = Astro.props;

// Split runes into individual characters and repeat for seamless scroll
const runeChars = runes.split('');
const repeatedRunes = [...runeChars, ...runeChars, ...runeChars, ...runeChars];
---

<div class="header-border">
  <div class="rune-scroll">
    {repeatedRunes.map((char) => <span>{char}</span>)}
  </div>
</div>

<style>
  .header-border {
    width: 100%;
    height: 28px;
    margin-top: 12px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
  }
</style>

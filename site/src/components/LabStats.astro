---
interface Props {
  allNotesWithMeta: Array<{
    data: { pubDate: Date };
    wordCount: number;
  }>;
}

const { allNotesWithMeta } = Astro.props;

// Calculate totals
const totalNotes = allNotesWithMeta.length;
const totalWords = allNotesWithMeta.reduce((sum, note) => sum + (note.wordCount || 0), 0);

function formatWords(words: number): string {
  return words >= 1000 ? (words / 1000).toFixed(1) + 'k' : String(words);
}
---

<!-- Lab Stats -->
<section class="lab-stats">
  <div class="lab-stats-header">
    <span class="lab-stats-title">Page Stats</span>
    <div class="time-filters">
      <button class="time-filter" data-range="1M">1M</button>
      <button class="time-filter" data-range="6M">6M</button>
      <button class="time-filter active" data-range="1Y">1Y</button>
      <button class="time-filter" data-range="5Y">5Y</button>
      <button class="time-filter" data-range="YTD">YTD</button>
    </div>
  </div>
  <div class="graphs-grid">
    <div class="graph-card" data-metric="notes">
      <div class="graph-header">
        <span class="graph-value" id="notes-value">{totalNotes}</span>
        <span class="graph-unit">notes</span>
        <div class="graph-delta" id="notes-delta"></div>
        <div class="graph-label">Notes Written</div>
      </div>
      <div class="graph-container">
        <div class="graph-tooltip" id="notes-tooltip"></div>
        <svg class="graph-svg" id="notes-graph"></svg>
      </div>
    </div>
    <div class="graph-card" data-metric="words">
      <div class="graph-header">
        <span class="graph-value" id="words-value">{formatWords(totalWords)}</span>
        <span class="graph-unit">words</span>
        <div class="graph-delta" id="words-delta"></div>
        <div class="graph-label">Words Written</div>
      </div>
      <div class="graph-container">
        <div class="graph-tooltip" id="words-tooltip"></div>
        <svg class="graph-svg" id="words-graph"></svg>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ allNotesWithMeta }}>
  // ============================================
  // Graph Configuration Constants
  // ============================================
  const GRAPH_CONFIG = {
    // Padding values for graph layout
    PADDING_MOBILE: { top: 10, right: 10, bottom: 22, left: 32 },
    PADDING_DESKTOP: { top: 10, right: 10, bottom: 25, left: 35 },
    // Value range scaling factors
    MIN_VALUE_SCALE: 0.9,
    MAX_VALUE_SCALE: 1.05,
    // Tick counts
    Y_TICKS_MOBILE: 3,
    Y_TICKS_DESKTOP: 4,
    X_LABELS_MOBILE: 3,
    X_LABELS_DESKTOP: 4,
    // Mobile breakpoint
    MOBILE_BREAKPOINT: 768,
    // Resize debounce delay (ms)
    RESIZE_DEBOUNCE: 100,
    // Data points per range
    DATA_POINTS: {
      '1M': 30,
      '6M': 26,
      '1Y': 12,
      '5Y': 20,
      'DEFAULT': 20
    }
  };

  const RANGE_TEXT = {
    '1M': 'past month',
    '6M': 'past 6 months',
    '1Y': 'past year',
    '5Y': 'past 5 years',
    'YTD': 'year to date'
  };

  const MONTHS = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];

  // ============================================
  // Optimized Data Generation
  // ============================================

  // Pre-sort notes by date once for efficient cumulative calculations
  const sortedNotesByDate = [...allNotesWithMeta].sort((a, b) =>
    new Date(a.data.pubDate).getTime() - new Date(b.data.pubDate).getTime()
  );
  function generateData(range, metric) {
    const now = new Date();
    let startDate;

    switch(range) {
      case '1M': startDate = new Date(now); startDate.setMonth(now.getMonth() - 1); break;
      case '6M': startDate = new Date(now); startDate.setMonth(now.getMonth() - 6); break;
      case '1Y': startDate = new Date(now); startDate.setFullYear(now.getFullYear() - 1); break;
      case '5Y': startDate = new Date(now); startDate.setFullYear(now.getFullYear() - 5); break;
      case 'YTD': startDate = new Date(now.getFullYear(), 0, 1); break;
      default: startDate = new Date(0);
    }

    // Determine number of data points based on range
    let numPoints = GRAPH_CONFIG.DATA_POINTS[range];
    if (range === 'YTD') {
      numPoints = Math.max(12, Math.floor((now.getTime() - startDate.getTime()) / (1000 * 60 * 60 * 24 * 7)));
    }
    if (!numPoints) numPoints = GRAPH_CONFIG.DATA_POINTS.DEFAULT;

    const timeSpan = now.getTime() - startDate.getTime();
    const intervalMs = timeSpan / numPoints;

    // Optimized: Use pre-sorted notes and iterate once with running totals
    // instead of filtering all notes for each data point (O(n) vs O(n*m))
    const data = [];
    let noteIndex = 0;
    let wordSum = 0;

    for (let i = 0; i <= numPoints; i++) {
      const pointDate = new Date(startDate.getTime() + (intervalMs * i));

      // Advance through sorted notes up to this point
      while (noteIndex < sortedNotesByDate.length &&
             new Date(sortedNotesByDate[noteIndex].data.pubDate) <= pointDate) {
        wordSum += sortedNotesByDate[noteIndex].wordCount || 0;
        noteIndex++;
      }

      data.push({
        date: pointDate,
        value: metric === 'notes' ? noteIndex : wordSum
      });
    }

    return data;
  }

  // ============================================
  // Formatting Functions
  // ============================================

  function formatGraphDate(date, range) {
    if (range === '1M') return date.getDate() + ' ' + MONTHS[date.getMonth()];
    if (range === '5Y') return MONTHS[date.getMonth()] + ' ' + date.getFullYear();
    return MONTHS[date.getMonth()] + ' ' + date.getFullYear().toString().slice(2);
  }

  function formatValue(value, metric) {
    return metric === 'notes' ? value : value >= 1000 ? (value/1000).toFixed(1) + 'k' : value;
  }

  // ============================================
  // Graph Drawing
  // ============================================

  function drawGraph(svgId, tooltipId, data, metric, range) {
    const svg = document.getElementById(svgId);
    const tooltip = document.getElementById(tooltipId);

    // Error handling: check for required elements
    if (!svg || !tooltip) {
      console.warn(`Graph elements not found: ${svgId}, ${tooltipId}`);
      return;
    }

    const container = svg.parentElement;
    if (!container) return;

    // Error handling: check for empty data
    if (data.length === 0) {
      svg.innerHTML = '<text x="50%" y="50%" text-anchor="middle" class="graph-axis-label">No data available</text>';
      return;
    }

    const rect = container.getBoundingClientRect();
    const width = rect.width, height = rect.height;
    const isMobile = window.innerWidth <= GRAPH_CONFIG.MOBILE_BREAKPOINT;
    const padding = isMobile ? GRAPH_CONFIG.PADDING_MOBILE : GRAPH_CONFIG.PADDING_DESKTOP;
    const chartWidth = width - padding.left - padding.right;
    const chartHeight = height - padding.top - padding.bottom;
    const values = data.map(d => d.value);

    // Error handling: handle case where all values are the same (avoid division by zero)
    const rawMin = Math.min(...values);
    const rawMax = Math.max(...values);
    const minVal = rawMin * GRAPH_CONFIG.MIN_VALUE_SCALE;
    const maxVal = rawMax * GRAPH_CONFIG.MAX_VALUE_SCALE;
    const valueRange = maxVal - minVal || 1; // Prevent division by zero

    const xScale = (i) => padding.left + (i / Math.max(data.length - 1, 1)) * chartWidth;
    const yScale = (v) => padding.top + chartHeight - ((v - minVal) / valueRange) * chartHeight;

    // Build SVG content with accessibility attributes
    let svgContent = '<defs><linearGradient id="gradient-' + metric + '" x1="0%" y1="0%" x2="0%" y2="100%"><stop offset="0%" style="stop-color: var(--accent); stop-opacity: 0.3"/><stop offset="100%" style="stop-color: var(--accent); stop-opacity: 0"/></linearGradient></defs>';

    const yTicks = isMobile ? GRAPH_CONFIG.Y_TICKS_MOBILE : GRAPH_CONFIG.Y_TICKS_DESKTOP;
    for (let i = 0; i <= yTicks; i++) {
      const val = minVal + (valueRange * i / yTicks), y = yScale(val);
      svgContent += '<line class="graph-grid-line" x1="' + padding.left + '" y1="' + y + '" x2="' + (width - padding.right) + '" y2="' + y + '"/>';
      svgContent += '<text class="graph-axis-label" x="' + (padding.left - 5) + '" y="' + (y + 3) + '" text-anchor="end">' + formatValue(Math.round(val), metric) + '</text>';
    }

    const xLabelCount = isMobile ? GRAPH_CONFIG.X_LABELS_MOBILE : GRAPH_CONFIG.X_LABELS_DESKTOP;
    for (let i = 0; i < xLabelCount; i++) {
      const idx = Math.floor(i * (data.length - 1) / Math.max(xLabelCount - 1, 1)), x = xScale(idx);
      svgContent += '<text class="graph-axis-label" x="' + x + '" y="' + (height - 5) + '" text-anchor="middle">' + formatGraphDate(data[idx].date, range) + '</text>';
    }

    let areaPath = 'M ' + xScale(0) + ' ' + yScale(data[0].value);
    let linePath = 'M ' + xScale(0) + ' ' + yScale(data[0].value);
    for (let i = 1; i < data.length; i++) {
      areaPath += ' L ' + xScale(i) + ' ' + yScale(data[i].value);
      linePath += ' L ' + xScale(i) + ' ' + yScale(data[i].value);
    }
    areaPath += ' L ' + xScale(data.length - 1) + ' ' + (height - padding.bottom) + ' L ' + xScale(0) + ' ' + (height - padding.bottom) + ' Z';
    svgContent += '<path class="graph-area" d="' + areaPath + '" fill="url(#gradient-' + metric + ')"/>';
    svgContent += '<path class="graph-line" d="' + linePath + '"/>';
    svgContent += '<line class="graph-hover-line" id="' + metric + '-hover-line" x1="0" y1="' + padding.top + '" x2="0" y2="' + (height - padding.bottom) + '"/>';
    svgContent += '<circle class="graph-dot" id="' + metric + '-dot" cx="0" cy="0" r="4"/>';

    for (let i = 0; i < data.length; i++) {
      const x = xScale(i), segmentWidth = chartWidth / data.length;
      svgContent += '<rect class="hover-area" x="' + (x - segmentWidth/2) + '" y="' + padding.top + '" width="' + segmentWidth + '" height="' + chartHeight + '" fill="transparent" data-index="' + i + '" tabindex="0" role="button" aria-label="Data point ' + (i + 1) + ': ' + formatValue(data[i].value, metric) + ' ' + metric + ' on ' + formatGraphDate(data[i].date, range) + '"/>';
    }

    svg.innerHTML = svgContent;
    svg.setAttribute('viewBox', '0 0 ' + width + ' ' + height);
    svg.setAttribute('role', 'img');
    svg.setAttribute('aria-label', 'Graph showing ' + metric + ' over time for ' + (RANGE_TEXT[range] || range));

    const dot = document.getElementById(metric + '-dot');
    const hoverLine = document.getElementById(metric + '-hover-line');

    svg.querySelectorAll('.hover-area').forEach(area => {
      const showTooltip = (e) => {
        const idx = parseInt(e.target.dataset.index);
        const point = data[idx];
        if (!point) return;
        const x = xScale(idx), y = yScale(point.value);
        if (dot) { dot.setAttribute('cx', x); dot.setAttribute('cy', y); dot.style.opacity = '1'; }
        if (hoverLine) { hoverLine.setAttribute('x1', x); hoverLine.setAttribute('x2', x); hoverLine.style.opacity = '1'; }
        const unit = metric === 'notes' ? 'notes' : metric === 'words' ? 'words' : 'min';
        tooltip.textContent = formatValue(point.value, metric) + ' ' + unit + ' · ' + formatGraphDate(point.date, range);
        tooltip.style.opacity = '1'; tooltip.style.left = x + 'px'; tooltip.style.top = (y - 35) + 'px'; tooltip.style.transform = 'translateX(-50%)';
      };
      const hideTooltip = () => {
        if (dot) dot.style.opacity = '0';
        if (hoverLine) hoverLine.style.opacity = '0';
        tooltip.style.opacity = '0';
      };

      // Mouse events
      area.addEventListener('mouseenter', showTooltip);
      area.addEventListener('mouseleave', hideTooltip);
      // Keyboard accessibility
      area.addEventListener('focus', showTooltip);
      area.addEventListener('blur', hideTooltip);
    });
  }

  // ============================================
  // Graph Updates with Error Handling
  // ============================================

  function updateGraphs(range) {
    ['notes', 'words'].forEach(metric => {
      const data = generateData(range, metric);
      drawGraph(metric + '-graph', metric + '-tooltip', data, metric, range);

      const deltaEl = document.getElementById(metric + '-delta');
      if (!deltaEl) return;

      // Error handling: check for empty data or division by zero
      if (data.length === 0) {
        deltaEl.textContent = 'No data available';
        deltaEl.className = 'graph-delta';
        return;
      }

      const first = data[0].value, last = data[data.length - 1].value, diff = last - first;

      // Handle division by zero when first value is 0
      if (first === 0) {
        deltaEl.textContent = diff > 0 ? '+' + formatValue(diff, metric) + ' ' + (RANGE_TEXT[range] || range) : 'No change';
        deltaEl.className = 'graph-delta ' + (diff > 0 ? 'positive' : '');
        return;
      }

      const pct = ((diff / first) * 100).toFixed(1), isPositive = diff >= 0;
      deltaEl.className = 'graph-delta ' + (isPositive ? 'positive' : 'negative');
      const rangeText = RANGE_TEXT[range] || range;
      const diffDisplay = metric === 'notes' ? Math.abs(diff) : (Math.abs(diff) / 1000).toFixed(1) + 'k';
      deltaEl.textContent = (isPositive ? '+' : '-') + diffDisplay + ' (' + Math.abs(parseFloat(pct)) + '%) ' + (isPositive ? '↑' : '↓') + ' ' + rangeText;
    });
  }

  // ============================================
  // Event Listeners
  // ============================================

  let currentRange = '1Y';
  let resizeTimeout;

  document.querySelectorAll('.time-filter').forEach(filter => {
    filter.addEventListener('click', () => {
      if (filter.dataset.range) {
        document.querySelectorAll('.time-filter').forEach(f => f.classList.remove('active'));
        filter.classList.add('active');
        currentRange = filter.dataset.range;
        updateGraphs(currentRange);
      }
    });
  });

  window.addEventListener('load', () => updateGraphs(currentRange));
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(() => updateGraphs(currentRange), GRAPH_CONFIG.RESIZE_DEBOUNCE);
  });
</script>

<style>
  /* Lab Stats */
  .lab-stats {
    padding: 48px 0;
    border-top: 1px solid var(--border);
    margin-top: 48px;
  }

  .lab-stats-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .lab-stats-title {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--accent);
  }

  .time-filters {
    display: flex;
    gap: 4px;
  }

  .time-filter {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    padding: 4px 8px;
    border: 1px solid var(--border);
    background: transparent;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.15s;
  }

  .time-filter:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .time-filter.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  .graphs-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .graph-card {
    border: 1px solid var(--border);
    padding: 20px;
    background: var(--bg);
  }

  .graph-header {
    margin-bottom: 16px;
  }

  .graph-value {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text);
    letter-spacing: -0.02em;
  }

  .graph-unit {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: var(--text-tertiary);
    margin-left: 4px;
  }

  .graph-delta {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    margin-top: 4px;
    min-height: 1.2em;
  }

  .graph-delta.positive { color: #16a34a; }
  .graph-delta.negative { color: #dc2626; }

  .graph-label {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin-top: 4px;
  }

  .graph-container {
    position: relative;
    height: 120px;
  }

  .graph-svg {
    width: 100%;
    height: 100%;
  }

  :global(.graph-line) {
    fill: none;
    stroke: var(--accent);
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  :global(.graph-area) {
    opacity: 0.15;
  }

  :global(.graph-grid-line) {
    stroke: var(--border);
    stroke-width: 1;
    stroke-dasharray: 2, 4;
  }

  :global(.graph-axis-label) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 9px;
    fill: var(--text-tertiary);
  }

  :global(.graph-tooltip) {
    position: absolute;
    background: var(--text);
    color: var(--bg);
    padding: 6px 10px;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.15s;
    white-space: nowrap;
    z-index: 10;
  }

  :global(.graph-tooltip::after) {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 5px solid transparent;
    border-top-color: var(--text);
  }

  :global(.graph-dot) {
    fill: var(--accent);
    opacity: 0;
    transition: opacity 0.15s;
  }

  :global(.graph-hover-line) {
    stroke: var(--text-tertiary);
    stroke-width: 1;
    stroke-dasharray: 2, 2;
    opacity: 0;
    transition: opacity 0.15s;
  }

  @media (max-width: 768px) {
    .graphs-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .graph-card {
      padding: 16px;
    }

    .graph-container {
      height: 100px;
    }

    .graph-axis-label {
      font-size: 8px;
    }

    .graph-line {
      stroke-width: 1.5;
    }
  }
</style>

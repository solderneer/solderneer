---
import { stringToPastelColor } from "../utils";
import tagsJson from "../content/_tags.json";
const { name = "life" } = Astro.props;

const hue = stringToPastelColor(name);
let styleString = `background-color: hsl(${hue}, 100%, 93%);color: hsla(${hue}, 100%, 15%, 0.7)`;

if (tagsJson[name].color) {
  styleString = `color: ${tagsJson[name].color}`;
}
---

<span
  class="py-1 px-2 text-md rounded-md italic whitespace-nowrap bg-beige-light"
  style={styleString}>{name}</span
>
